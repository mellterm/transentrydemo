<% title "Document" %>

<p>
  <strong>Name:</strong>
  <%= @document.name %>
</p>
<p>
  <strong>Translation Type:</strong>
  <%= @document.translation_type %>
</p>
<p>
  <strong>User:</strong>
  <%= @document.user_id %>
</p>

<%= image_tag @document.data.url %>

<p>
  <%= link_to "Edit", edit_document_path(@document) %> |
